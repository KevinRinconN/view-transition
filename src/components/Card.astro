---
import Image from '../../node_modules/astro/components/Image.astro';
interface Props {
	title: string;
	body: string;
	href: string;
	img: string;
}

const { href, title, body, img } = Astro.props;
---

<li class="border shadow-md rounded-md p-4">
	<a href={href} class="space-y-6">
		
		<div class="overflow-hidden">
			<Image class="aspect-[16/5] object-cover rounded-lg" width={1020} height={520} src={img} alt="">
		</div>
		<div class="space-y-2">
			<h2 class="text-2xl font-semibold">
				{title}
			</h2>
			<p>
				{body}
			</p>
		</div>
		
	</a>
</li>

